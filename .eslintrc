---
env:
  browser: true
  es6: true
  node: true
  mocha: true
parser: babel-eslint
ecmaFeatures:
  blockBindings: true
  modules: true
extends:
  ".eslintrc-sails"
rules:
  strict: 0
  no-multi-spaces: 0
  no-shadow: 0
  consistent-return: 0
  no-use-before-define: 2
  new-parens: 2
  no-cond-assign: 2
  keyword-spacing: 2
  space-infix-ops: 2
  key-spacing:
    - 2
    - beforeColon: false
      afterColon: true
  comma-dangle:
    - 2
    - never
  no-multiple-empty-lines:
    - 2
    - max: 2
  quotes:
    - 2
    - double
  eqeqeq:
    - 2
    - smart
  wrap-iife:
    - 2
    - inside
  indent:
    - 2
    - 2
    - SwitchCase: 1
  brace-style:
    - 2
    - 1tbs
  spaced-comment:
    - 2
    - always
    - exceptions:
      - "-"
      - "+"
      - "*"
  space-before-function-paren: 2
  no-unused-vars:
    - 2
    - vars: "all"
      args": "after-used"
